<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#227C90"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la accion"
            android:textColor="@color/white"
            android:id="@+id/item_nombreAccion"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/item_image"
            android:layout_alignRight="@+id/item_image"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="valor de la accion"
            android:textColor="@color/white"
            android:id="@+id/item_valorAccion"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/item_image"
            android:layout_alignRight="@+id/item_image"
            android:layout_below="@+id/item_nombreAccion" />

        <!-- los id estan sincronizados con el del recyclerview se relacionan con R.vista.nombre-->
    </RelativeLayout>



</androidx.cardview.widget.CardView>